<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable
			name="view" type="com.example.ui.StockDetailView" />
		<variable
			name="viewModel" type="com.example.viewmodel.StockDetailRxViewModel" />
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/global_keyline_16"
		android:orientation="vertical">

		<TextView
			android:id="@+id/fragment_stock_detail_symbol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:text="@{@string/fragment_stock_detail_symbol(viewModel.quote.symbol)}"
			android:onClick="@{view::onClick}"
			tools:text="INTC" />

		<TextView
			android:id="@+id/fragment_stock_detail_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:text="@{@string/fragment_stock_detail_name(viewModel.quote.name)}"
			android:onClick="@{view::onClick}"
			tools:text="Intel" />

		<TextView
			android:id="@+id/fragment_stock_detail_last_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:text="@{@string/fragment_stock_detail_price(viewModel.quote.lastPrice)}"
			android:onClick="@{view::onClick}"
			tools:text="$30.5" />

		<TextView
			android:id="@+id/fragment_stock_detail_last_change"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:text="@{@string/fragment_stock_detail_change(viewModel.quote.changePercent)}"
			android:onClick="@{view::onClick}"
			tools:text="0.5%" />

		<TextView
			android:id="@+id/fragment_stock_detail_last_capitalization"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.Stocks.Body1"
			android:text="@{@string/fragment_stock_detail_capitalization(viewModel.quote.marketCap)}"
			android:onClick="@{view::onClick}"
			tools:text="$2000000" />

		<ImageView
			android:id="@+id/fragment_stock_detail_chart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="fitCenter"
			app:imageUrl="@{viewModel.chartUrl}" />

	</LinearLayout>

</layout>
