<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<data>
		<variable name="view" type="com.example.ui.StockListView" />
		<variable name="viewModel" type="com.example.viewmodel.StockListViewModel" />
	</data>

	<com.example.view.StatefulLayout
		android:id="@+id/stock_list_stateful_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true"
		app:progressLayout="@layout/placeholder_progress"
		app:offlineLayout="@layout/placeholder_offline"
		app:emptyLayout="@layout/placeholder_empty"
		app:state="@{viewModel.state}">

		<FrameLayout
			android:id="@+id/container_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<android.support.v7.widget.RecyclerView
				android:id="@+id/stock_list_recycler"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:scrollbars="vertical"
				android:background="@color/global_bg_front"
				app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

		</FrameLayout>
	</com.example.view.StatefulLayout>

</layout>
